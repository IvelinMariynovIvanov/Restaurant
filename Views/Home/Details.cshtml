@model Restaurant.Models.Entities.ShoppingCart
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="MenuItemId" hidden />
    @*<input asp-for="@Model.MenuItem" hidden />*@
    <div class="container">
        <div class="row">
            <div class="col-8 border">
                <div class="border row">
                    <div class="container-fluid col-8">
                        <fieldset disabled>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="MenuItem.Name" class="form-control"></label>
                                </div>
                                <div class="col-8">
                                    <input asp-for="MenuItem.Name" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="MenuItem.Description" class="form-control"></label>
                                </div>
                                <div class="col-8">
                                    <input asp-for="MenuItem.Description" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="MenuItem.Price" class="form-control"></label>
                                </div>
                                <div class="col-8">
                                    <input asp-for="MenuItem.Price" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="MenuItem.CategoryId" class="form-control"></label>
                                </div>
                                <div class="col-8">
                                    <input asp-for="MenuItem.Category.Name" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="MenuItem.SubCategoryId" class="form-control"></label>
                                </div>
                                <div class="col-8">
                                    <input asp-for="MenuItem.SubCategory.Name" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="container-fluid col-4">
                                    <label asp-for="MenuItem.SpicyType" class="form-control"></label>
                                </div>
                                <div class="col-8">
                                    <input asp-for="MenuItem.SpicyType" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-group row">
                            <div class="container-fluid col-4">
                                <label asp-for="Count" class="form-control"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Count" class="form-control" />
                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <a asp-action="Index" class="btn btn-success form-control">Back</a>
                            </div>
                            <div class="col-8">
                                <input type="submit" value="Add to Cart" class="btn btn-primary form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-1">

                    </div>
                    <div class="col-3">
                        <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

