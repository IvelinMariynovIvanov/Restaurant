@model Restaurant.ViewModels.SubCategoryVm.SubCategoryVm
@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Create SubCategory</h2>

@Html.Partial("_StatusMessage", Model.StatusMessage)


<div class="row">
    <div class="col-8 border">       
        <form asp-action="Create" class="mt-5">
            @*<input hidden asp-for="SubCategory.CategoryId" />*@
            <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.Name"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCategory.Name" class="form-control" />
                    <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="@Model.SelectedCategoryid"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.SubCategory.CategoryId"
                            asp-items="@Model.CategoryList" class="form-control">
                        @*<option>Please select Category</option>*@
                    </select>
                    <span asp-validation-for="@Model.SubCategory.CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="IsNew"></label>
                </div>
                <div class="col-5">
                    <input asp-for="IsNew" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5">
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-success ml-4">Back</a>
                    <input type="submit" value="Create" class="btn btn-primary " />
                </div>
            </div>
        </form>
    </div>
    <div class="col-4">
        @if(Model.SubCategoryList.Count > 0)
        {
            <p>Existing SubCategories: </p>
            @foreach (var item in Model.SubCategoryList)
            {
               <input asp-for="@item" disabled class="form-control" />
               <p>

               </p>
            }
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


