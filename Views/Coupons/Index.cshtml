@model IEnumerable<Restaurant.Models.Entities.Coupon>
@{
    ViewData["Title"] = "Index";
}

<h2>Coupons</h2>
<hr />

<p>
    @Html.Partial("_CreateButtonPartial")
</p>

<div class="container">
    <div class="border row">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="d-xl-table-row">
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CouponType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MinAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="d-sm-table-row">
                    <th>
                        @Html.DisplayFor(model => item.Name)
                    </th>
                    <th>
                        @Html.DisplayFor(model => item.CouponType)
                    </th>
                    <th>
                        @Html.DisplayFor(model => item.Discount)
                    </th>
                    <th>
                        @Html.DisplayFor(model => item.MinAmount)
                    </th>
                    <th>
                        @Html.DisplayFor(model => item.IsActive)
                    </th>
                    <td>
                        <div class="btn-group" role="group" style="width:40px">
                            <a type="button" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mr-3">
                                <i class="fas fa-edit"></i>
                            </a>

                            <a type="button" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>
