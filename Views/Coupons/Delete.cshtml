@model Restaurant.Models.Entities.Coupon
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<div class="container ">
    <div class="row">
        <div class="col-6 mb-2 border">
            @* move to vm
                if there is no pictute get a error*@
            @{
                var base64 = Convert.ToBase64String(Model.Picture);
                var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);

            }
            <img src='@imgSrc' width="100%" />
        </div>
    </div>

    <div class="row">
        <div class="col-6 border">
            <form asp-action="Delete" enctype="multipart/form-data">
                <input hidden asp-for="Id" />
                <fieldset disabled>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Picture"></label>
                        </div>
                        <div class="col-8">
                            <input type="file" id="projectImage" name="files" multiple class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="CouponType"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="CouponType"
                                    asp-items="Html.GetEnumSelectList<CouponType>()"
                                    class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Discount"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Discount" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MinAmount"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="MinAmount" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="IsActive"></label>
                        </div>
                        <div class="col-8">
                            <input type="checkbox" asp-for="IsActive" class="form-check-inline" />
                        </div>
                    </div>
                </fieldset>

                <div>
                    <a asp-action="Index" class="btn btn-outline-success">Back</a>
                    <input type="submit" value="Delete" asp-route-id="Model.Id" class="btn btn-outline-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
