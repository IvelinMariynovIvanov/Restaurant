@model Restaurant.Models.Entities.Coupon
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<br />
<hr />

<div class="container">
    <div class="row">
        <div class="col-6 border">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Picture"></label>
                    </div>
                    <div class="col-8">
                        <input type ="file" id="projectImage" name="files" multiple class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CouponType"></label>
                    </div>
                    <div class="col-8">
                        <select 
                            asp-for="CouponType" 
                            asp-items="Html.GetEnumSelectList<CouponType>()" 
                            class="form-control">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Discount"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Discount" class="form-control"/>
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MinAmount"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MinAmount" class="form-control"/>
                        <span asp-validation-for="MinAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IsActive"></label>
                    </div>
                    <div class="col-8">
                        <input type="checkbox" asp-for="IsActive" class="form-check-inline"/>
                    </div>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-success">Back</a>
                    <input type="submit" value="Create" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

