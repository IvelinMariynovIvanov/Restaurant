<td style="width:150px">
    <div class="btn-group" role="group">
        <a type="button" asp-action="Edit" asp-route-id="@Model" class="btn btn-primary mr-3">
            <i class="fas fa-edit"></i>
        </a>

        @*href="@Url.Action("Details/"+Model)" class="btn btn-success"*@
        <a type="button" asp-action="Details" asp-route-id="@Model"  class="btn btn-success mr-3">
            <i class="fas fa-list-alt"></i>
        </a>

        <a type="button" asp-action="Delete" asp-route-id="@Model" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
        </a>
    </div>
</td>