<div class="border border-info rounded col-12" style="margin-top:10px; margin-bottom:10px; padding:10px;">
    <div class="row">
        <div class="col-9">
            <div class="row">
                <div class="col-10">
                    <label class="text-primary" style="color:maroon">
                        @Model.Name
                    </label>
                    <br />
                    <label class="badge badge-primary">
                        @Model.Category.Name
                    </label>
                    <label class="badge badge-primary">
                        @Model.SubCategory.Name
                    </label>
                    <label class="badge badge-info">
                        @Model.SpicyType
                    </label>
                </div>
                <div class="col-2 text-right">
                    <h4>
                        $@Model.Price
                    </h4>
                </div>
            </div>
            <div class="row col-9">
                <p>
                    @Model.Description
                </p>
                <br />
            </div>
            <div class="row col-12" style="position:absolute; bottom: 0px;">
                <div class="ml-3">
                    <a asp-action="Details" class="btn btn-outline-primary" asp-route-id="@Model.Id">Add</a>
                </div>
            </div>
        </div>
        <div class="col-3">
            <img src="@Model.Image" width="90%" style="border-radius:5px; border:1px solid #bbb9b9b; " />

        </div>
    </div>
</div>


